<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<TextView
    android:id="@+id/checkpoint_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Mumbai"
    android:textSize="11pt"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/list_image"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:src="@drawable/checkpoint" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/asset_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Photos &amp; 10 Notes"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/photo_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/photo_button"
                android:onClick="photoButtonClicked" />

            <Button
                android:id="@+id/note_button"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:background="@drawable/note_button"
                android:onClick="noteButtonClicked" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/photo_thumb"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp" />
</LinearLayout>

</LinearLayout>

</RelativeLayout>